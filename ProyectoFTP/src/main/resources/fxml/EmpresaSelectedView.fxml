            </Button>
            <Button fx:id="Limpiar" mnemonicParsing="false" onAction="#onLimpiarAction" text="Limpiar">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets top="5.0" />
